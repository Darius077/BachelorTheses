<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="525.0" prefWidth="1007.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- 1. Available students  -->
        <TitledPane animated="false" layoutX="14.0" layoutY="12.0" prefHeight="199.0" prefWidth="629.0" text="Table">
            <content>
                <ListView fx:id="studentsListView" prefHeight="315.0" prefWidth="233.0" />
            </content>
        </TitledPane>
        <!-- 2. Check if students have no title for their thesis  -->
      <Button fx:id="buttonCheck" layoutX="77.0" layoutY="238.0" mnemonicParsing="false" onAction="#checkHandler" text="No title" />
        <!-- 3. Modify the title and the progress percentage of the stududent's thesis  -->
      <TextField fx:id ="titleTextField" layoutX="59.0" layoutY="307.0" promptText="title" />
      <TextField fx:id ="percentageTextField" layoutX="60.0" layoutY="365.0" promptText="progress percentage" />
      <Button  fx:id="buttonUpdate" layoutX="303.0" layoutY="340.0" mnemonicParsing="false" onAction="#updateHandler" text="Update" />


    </children>
</AnchorPane>
